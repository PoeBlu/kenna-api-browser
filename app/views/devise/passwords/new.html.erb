<span class="card-title">Forgot your password?</span>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


    <button class="btn waves-effect waves-light" style="color:white; background-color:#34495e;" type="submit" name="commit" value="login">Send me reset password instructions
      <i class="material-icons right">send</i>
    </button>
    

<% end %>

<%= render "devise/shared/links" %>
